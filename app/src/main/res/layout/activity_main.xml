<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/nasal"
        android:gravity="center"
        android:text="BegPY"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"></TextView>


    <GridLayout
        android:layout_width="375dp"
        android:layout_height="195dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:rowCount="4">
        <androidx.cardview.widget.CardView
            android:id="@+id/maincard1"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/steel_blue"
            app:cardCornerRadius="12dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:id="@+id/learnpythoncard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="18dp"
                android:src="@drawable/pythoncard" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="135dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/nasal"
                android:text="Learn Python"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18dp"

                />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="2"
            android:layout_column="1"
            android:gravity="center"
            android:orientation="vertical" />

        <androidx.cardview.widget.CardView
            android:id="@+id/quizgamecard"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/steel_blue"
            app:cardCornerRadius="12dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:id="@+id/quizgamecard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="18dp"
                android:src="@drawable/choose" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="135dp"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/nasal"
                android:text="Quiz Game"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18dp"

                />

        </androidx.cardview.widget.CardView>


    </GridLayout>

    </LinearLayout>

